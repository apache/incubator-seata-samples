<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.seata.samples.integration.account.mapper.TAccountMapper">

    <!-- 开启二级缓存 -->
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="io.seata.samples.integration.account.entity.TAccount">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="amount" property="amount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, amount
    </sql>
    <update id="decreaseAccount">
      update t_account set amount = amount-${amount} where user_id = #{userId}
    </update>
    <update id="testGlobalLock">
      select * from t_account where user_id = #{userId} for update
    </update>

</mapper>
